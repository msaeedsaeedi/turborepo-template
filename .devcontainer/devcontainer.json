{
  "name": "FullStack Development Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "forwardPorts": [
    3000 // NestJS backend
  ],
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "angular.ng-template"],
      "settings": {
        "editor.formatOnSave": true,
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },
  "postCreateCommand": "npm install -g pnpm turbo && pnpm install"
}
